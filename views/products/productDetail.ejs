<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head') %>

  <body>
    <!-- ----------Inicio de header----------- -->
    <%- include('../partials/header') %>

    <!-- ----------Fin de header----------- -->

    <!-- ----------Inicio de main----------- -->
    <main class="producto__main__container">
      <nav class="producto_main_section_nav">
        <div class="producto_main_section_ruta">
          <a href="/">Inicio</a>&nbsp/&nbsp<a href="/productos/<%= product.categoria %>"><%= product.categoria %></a
          >&nbsp/&nbsp<a href="/productos/detalle/<%= product.id %>"><%= product.nombre %></a>
        </div>
      </nav>

      <section class="producto__section__categorias">
        <div class="producto__section__izquierda">
          <div class="producto__section__categorias__article--img">
            <img
              src="/images/products/<%= product.imagen[0] %>"
              alt="<%= product.nombre %>"
            />
          </div>
          <p>
            <%= product.cuidados %>
          </p>
        </div>
        <div class="producto__section__derecha">
          <h1><%= product.nombre %></h1>
          <p class="smart">SKU: 00<%= product.id %></p>
          <div class="producto__precio">
            <p class="smart">Precio</p>
            <h4><%= formatPrice( product.precio ) %></h4>
          </div>

          <p class="smart">CANTIDAD:</p>
          <div class="producto__cantidad">
            <button>-</button>
            <span>1</span>
            <button>+</button>
          </div>
          <div class="producto__section__categorias__button">
            <button class="button_agregar">Agregar al carrito</button>
            <button class="button_favoritos">
              <img src="/images/iconos/icono_favorito.png" alt="fav" />
            </button>
          </div>
          <button class="button__compra">Realizar Compra</button>
          <h4 class="detalles">DETALLES DEL PRODUCTO</h4>
          <p class="detalles">
            <%= product.descripcion %>
          </p>
          <h5><%= product.descripcion_altura %></h5>
          <h5><%= product.descripcion_maceta %></h5>
        </div>
      </section>

      <%- include('../partials/carrusel', {productsByFeatured: productsByFeatured}) %>
    </main>
    <!-- ----------Fin de main----------- -->

    <!-- ----------Inicio de footer----------- -->
    <%- include('../partials/footer') %>


    <!-- ----------Fin de footer----------- -->
  </body>
</html>