<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head') %>

  <body>
    <!-- ----------Inicio de header----------- -->
    <%- include('../partials/header') %>
    <!-- ----------Fin de header----------- -->
    <!-- ----------Inicio de main----------- -->
    <div class="admin__products__container">
      <table class="responsive-table">
        <div class="admin__products__header">
          <h2>Lista de productos</h2>
          <a href="/admin/createProduct"><button class="btn__crear">Agregar Producto</button></a>
          
        </div>
        <thead>
          <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Id</th>
            <th scope="col">Stock</th>
            <th scope="col">Precio</th>
            <th scope="col">Categoria</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Acciones</th>
          </tr>
        </thead>

        <tbody>
          <% productos.forEach(producto => { %>

          <tr>
            <th scope="row"><%= producto.nombre %></th>
            <td data-title="Id"><%= producto.id %></td>
            <td data-title="Stock"><%= producto.stock %></td>
            <td data-title="Precio">$<%= producto.precio %></td>
            <td data-title="Categoria"><%= producto.categoria %></td>
            <td data-title="Descripcion"><%= producto.descripcion %></td>
            <td data-title="Acciones">
              <a href="/admin/editProduct/<%= producto.id %>"
                ><button class="btn__editar">Editar</button></a
              >

              <form
                action="/admin/deleteProduct/<%= producto.id %>?_method=DELETE"
                method="POST"
              >
                <button type="submit" class="btn__borrar">Borrar</button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <!-- ----------Fin de main----------- -->
    <!-- ----------Inicio de footer----------- -->
    <%- include('../partials/miniFooter') %>
    <!-- ----------Fin de footer----------- -->
  </body>
</html>
